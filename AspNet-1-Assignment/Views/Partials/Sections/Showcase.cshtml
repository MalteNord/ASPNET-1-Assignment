@{
    var user = await UserManager.GetUserAsync(User);
}
<section class="showcase">
    <div class="container">

        <div class="content">
            <h1>Task Management Assistant You Gonna Love</h1>

            <p>We offer you a new generation of task management system. Plan, manage & track all your tasks in one flexible tool.</p>

            @if (SignInManager.IsSignedIn(User) && user != null)
            {
                <a class="get-started btn-theme" asp-action="Index" asp-controller="Courses">Get started for free</a>
            }
            else
            {
                <a class="get-started btn-theme" asp-action="SignUp" asp-controller="Auth">Get started for free</a>
            }

            <div class="brands">
                <h6>Largest companies use our tool to work efficiently</h6>
                <div class="brands-logos">
                    <img class="brand-logo" src="~/images/logos/logoipsum-1.svg" alt="logoipsum">
                    <img class="brand-logo" src="~/images/logos/logoipsum-2.svg" alt="logoipsum">
                    <img class="brand-logo" src="~/images/logos/logoipsum-3.svg" alt="logoipsum">
                    <img class="brand-logo" src="~/images/logos/logoipsum-4.svg" alt="logoipsum">
                </div>
            </div>
        </div>
    </div>
    <img class="showcase-img" src="~/images/showcase-img.svg" alt="">  
</section>

