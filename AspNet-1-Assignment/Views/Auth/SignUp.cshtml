@model SignUpViewModel

@{
    ViewData["Title"] = "Sign up";
}
<section class="signup">
    <div class="container">
        <h1>Create Account</h1>
        <p class="subtitle">Already have an account? <a asp-action="SignIn" asp-controller="Auth" class="signup"> Sign in here.</a></p>

    <form method="post" asp-action="SignUp" asp-controller="Auth">

        <div>
            @ViewData["StatusMessage"]
        </div>

 <div class="input-group">
        <div class="name">
            <div class="firstname">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="input-name label-l" />
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="lastname">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="input-name label-l" />
                <span asp-validation-for="LastName"></span>
            </div>
        </div>

                <label asp-for="Email"></label>
                <input asp-for="Email" class="input label-l" />
                <span asp-validation-for="Email"></span>

                <label asp-for="Password"></label>
                <input asp-for="Password" class="input label-l" />
                <span asp-validation-for="Password"></span>

                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="input label-l" />
                <span asp-validation-for="ConfirmPassword"></span>

        <div class="checkbox-group">
            <div class="input-group">
                <input asp-for="TermsAndConditions">
            </div>
            <label asp-for="TermsAndConditions">I agree to the terms & conditions.</span></label>
            <span asp-validation-for="TermsAndConditions"></span>
        </div>
        <button class="sign-up btn-theme" type="submit">Sign up</button>
    </div>
    </form>
    </div>
   

</section>